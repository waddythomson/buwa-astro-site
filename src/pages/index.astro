<script>
  // Stats animation
  const statNumbers = document.querySelectorAll('.stat-number[data-count]');
  const animateCount = (el) => {
    const target = Number(el.dataset.count || '0');
    const duration = 1200;
    const start = performance.now();

    const step = (now) => {
      const progress = Math.min((now - start) / duration, 1);
      const value = Math.round(progress * target);
      el.textContent = `${value}%`;
      if (progress < 1) requestAnimationFrame(step);
    };

    requestAnimationFrame(step);
  };

  const observer = new IntersectionObserver(
    (entries, obs) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        const el = entry.target;
        if (el.dataset.animated) return;
        el.dataset.animated = 'true';
        animateCount(el);
        obs.unobserve(el);
      });
    },
    { threshold: 0.4 }
  );

  statNumbers.forEach((el) => observer.observe(el));

  // Intro video splash (6 seconds)
  const introDurationMs = 4500;
  const introVideo = document.getElementById('introVideo');
  const introVideoEl = document.getElementById('introVideoEl');
  const heroVideoEl = document.querySelector('.hero-video');
  let heroPlaylist = ['/uploads/hero/1.mp4', '/uploads/hero/2.mp4', '/uploads/hero/3.mp4'];
  let heroPlaylistIndex = 0;
  let heroErrorHandler;
  const prefersWebm = heroVideoEl instanceof HTMLVideoElement
    && (heroVideoEl.canPlayType('video/webm; codecs="vp9"') || heroVideoEl.canPlayType('video/webm')) !== '';
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  let playbackTimer;
  let maxWaitTimer;
  let hasPlayed = false;

  const clearTimers = () => {
    if (playbackTimer) {
      clearTimeout(playbackTimer);
      playbackTimer = undefined;
    }
    if (maxWaitTimer) {
      clearTimeout(maxWaitTimer);
      maxWaitTimer = undefined;
    }
  };

  const setHeroSource = (src) => {
    if (!(heroVideoEl instanceof HTMLVideoElement)) return;
    const sourceEl = heroVideoEl.querySelector('source');

    const applySource = (sourceUrl, type) => {
      if (sourceEl) {
        sourceEl.src = sourceUrl;
        sourceEl.type = type;
      } else {
        heroVideoEl.src = sourceUrl;
      }
      heroVideoEl.load();
    };

    if (heroErrorHandler) {
      heroVideoEl.removeEventListener('error', heroErrorHandler);
      heroErrorHandler = undefined;
    }

    if (prefersWebm && src.endsWith('.mp4')) {
      const webmSrc = src.replace(/\.mp4(\?.*)?$/, '.webm$1');
      heroErrorHandler = () => {
        applySource(src, 'video/mp4');
        heroVideoEl.play().catch(() => {});
      };
      heroVideoEl.addEventListener('error', heroErrorHandler, { once: true });
      applySource(webmSrc, 'video/webm');
      return;
    }

    applySource(src, src.endsWith('.webm') ? 'video/webm' : 'video/mp4');
  };

  const loadHeroPlaylist = async () => {
    try {
      const response = await fetch('/uploads/hero/playlist.json', { cache: 'no-store' });
      if (!response.ok) return;
      const data = await response.json();
      if (Array.isArray(data.videos) && data.videos.length > 0) {
        heroPlaylist = data.videos;
      }
    } catch {
      // Keep default list if playlist fails to load
    }
  };

  const startHeroVideo = async () => {
    if (prefersReducedMotion) return;
    if (!(heroVideoEl instanceof HTMLVideoElement)) return;

    await loadHeroPlaylist();
    if (heroPlaylist.length === 0) return;

    heroVideoEl.muted = true;
    heroVideoEl.playsInline = true;

    heroVideoEl.addEventListener('ended', () => {
      heroPlaylistIndex = (heroPlaylistIndex + 1) % heroPlaylist.length;
      setHeroSource(heroPlaylist[heroPlaylistIndex]);
      heroVideoEl.play().catch(() => {});
    });

    setHeroSource(heroPlaylist[heroPlaylistIndex]);
    heroVideoEl.play().catch(() => {});
  };

  const hideIntro = () => {
    if (!introVideo) return;
    introVideo.classList.add('done');
    document.body.classList.remove('intro-active');
    clearTimers();
    if (introVideoEl) {
      introVideoEl.pause();
      introVideoEl.currentTime = 0;
    }
    setTimeout(() => introVideo.remove(), 500);
    startHeroVideo();
  };

  const showIntro = () => {
    if (!introVideo) return;
    document.body.classList.add('intro-active');
    introVideo.classList.add('active');
    if (introVideoEl instanceof HTMLVideoElement) {
      introVideoEl.muted = true;
      introVideoEl.playsInline = true;
      introVideoEl.addEventListener(
        'playing',
        () => {
          hasPlayed = true;
          playbackTimer = setTimeout(hideIntro, introDurationMs);
        },
        { once: true }
      );
      introVideoEl.addEventListener('error', hideIntro, { once: true });
      maxWaitTimer = setTimeout(() => {
        if (!hasPlayed) hideIntro();
      }, 2000);
      introVideoEl.play().catch(() => {
        hideIntro();
      });
    } else {
      hideIntro();
    }
  };

  if (!prefersReducedMotion && introVideoEl?.querySelector('source')?.getAttribute('src')) {
    showIntro();
  } else {
    hideIntro();
  }

  // Partners carousel
  const partnersTrack = document.querySelector('.partners-track');
  if (partnersTrack) {
    const partnerCount = parseInt(partnersTrack.dataset.partnerCount || '0');
    const items = partnersTrack.querySelectorAll('.partners-item');
    const images = partnersTrack.querySelectorAll('img');
    let loadedCount = 0;

    const initCarousel = () => {
      if (!partnerCount || !items.length || partnersTrack.dataset.carouselInit === 'true') {
        return;
      }
      partnersTrack.dataset.carouselInit = 'true';
      const itemWidth = items[0].offsetWidth;
      const scrollDistance = itemWidth * partnerCount;
      const duration = partnerCount * 1.2;
      const styleSheet = document.createElement('style');
      styleSheet.setAttribute('data-partners-carousel', 'true');
      styleSheet.textContent = `
        @keyframes partnersScroll {
          0% { transform: translateX(0); }
          100% { transform: translateX(-${scrollDistance}px); }
        }
        .partners-track {
          animation: partnersScroll ${duration}s linear infinite;
        }
        .partners-track:hover {
          animation-play-state: paused;
        }
      `;
      document.head.appendChild(styleSheet);
    };

    const checkLoaded = () => {
      loadedCount++;
      if (loadedCount >= images.length) {
        initCarousel();
      }
    };

    images.forEach((img) => {
      if (img.complete) {
        checkLoaded();
      } else {
        img.addEventListener('load', checkLoaded);
        img.addEventListener('error', checkLoaded);
      }
    });

    setTimeout(() => {
      if (!partnersTrack.dataset.carouselInit) {
        initCarousel();
      }
    }, 2000);
  }
</script>

