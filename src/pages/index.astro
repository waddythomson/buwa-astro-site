<script>
  // Stats animation
  const statNumbers = document.querySelectorAll('.stat-number[data-count]');
  const animateCount = (el) => {
    const target = Number(el.dataset.count || '0');
    const duration = 1200;
    const start = performance.now();

    const step = (now) => {
      const progress = Math.min((now - start) / duration, 1);
      const value = Math.round(progress * target);
      el.textContent = `${value}%`;
      if (progress < 1) requestAnimationFrame(step);
    };

    requestAnimationFrame(step);
  };

  const observer = new IntersectionObserver(
    (entries, obs) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        const el = entry.target;
        if (el.dataset.animated) return;
        el.dataset.animated = 'true';
        animateCount(el);
        obs.unobserve(el);
      });
    },
    { threshold: 0.4 }
  );

  statNumbers.forEach((el) => observer.observe(el));

  // Video popup functionality
  const videoModal = document.getElementById('videoModal');
  const openBtn = document.getElementById('openVideoPopup');
  const closeBtn = document.getElementById('closeVideoPopup');
  let youtubeVideoId = 'WN3qbqm1WGI'; // fallback
  const videoWrapper = document.querySelector('.video-wrapper');
  let revealTimer;

  // Fetch video config
  fetch('/config.json')
    .then(res => res.json())
    .then(config => {
      if (config.heroVideo?.id) {
        youtubeVideoId = config.heroVideo.id;
      }
    })
    .catch(() => {}); // Use fallback if fetch fails

  const closeModal = () => {
    videoModal.classList.remove('active');
    videoModal.classList.remove('ready');
    document.body.style.overflow = '';
    if (revealTimer) {
      clearTimeout(revealTimer);
      revealTimer = undefined;
    }
    if (videoWrapper) {
      videoWrapper.innerHTML = '<div id="youtubePlayer"></div>';
    }
  };

  const revealModal = () => {
    if (!videoModal?.classList.contains('active')) {
      videoModal?.classList.add('active');
    }
    videoModal?.classList.add('ready');
  };

  const openVideoModal = () => {
    videoModal.classList.remove('active', 'ready');
    document.body.style.overflow = 'hidden';
    if (revealTimer) {
      clearTimeout(revealTimer);
    }
    revealTimer = setTimeout(revealModal, 500);

    if (videoWrapper) {
      videoWrapper.innerHTML = `
        <iframe
          src="https://www.youtube.com/embed/${youtubeVideoId}?autoplay=1&mute=1&playsinline=1&loop=1&playlist=${youtubeVideoId}"
          title="BuWa TV in Action"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          style="position:absolute;top:0;left:0;width:100%;height:100%;">
        </iframe>
      `;
      const iframe = videoWrapper.querySelector('iframe');
      if (iframe) {
        iframe.addEventListener('load', revealModal, { once: true });
      }
    }
  };

  openBtn?.addEventListener('click', openVideoModal);

  closeBtn?.addEventListener('click', closeModal);

  videoModal?.addEventListener('click', (e) => {
    if (e.target === videoModal) {
      closeModal();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && videoModal?.classList.contains('active')) {
      closeModal();
    }
  });
</script>

