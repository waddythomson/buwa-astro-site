---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "BuWa TV Advertising";
const pageDescription = "Connect your brand with audiences everywhere through our indoor digital billboard network. Non-skippable, local reach advertising.";
const faq = [
  {
    question: "What if I want a screen inside my location?",
    answer: "Reach out to us to see if your business qualifies to join our network. We choose locations based on factors like high traffic, dwell times, brand fit, and marketing effectiveness.",
  },
  {
    question: "What if I already have content for my campaigns for the year?",
    answer: "Great. We can align your existing content with seasonal campaigns and schedule each ad when you're ready to launch.",
  },
  {
    question: "What if I need to run an ad for only a short time, like for an event?",
    answer: "We regularly support events and promotions. We'll plan a short-term campaign that aligns with your timeline and goals.",
  },
];

const relatedServices = [
  { label: "Google Business Profile", href: "/google-business-profile/" },
  { label: "Display Advertising | Geofencing", href: "/geofencing/" },
  { label: "Connected TV | OTT Ads", href: "/connected-tv-ott-ads/" },
  { label: "Pay-Per-Click (PPC)", href: "/pay-per-click-ppc/" },
];

const partnerQuote = {
  quote: "Buwa Digital is the real deal when it comes to helping local businesses grow in today's digital world. Their indoor digital billboards are a game-changer for visibility.",
  name: "David Medley",
  company: "Better Homes and Gardens Real Estate Medley",
};
---

<BaseLayout title={pageTitle} description={pageDescription} faq={faq}>
  <!-- Hero Section with Blue Background -->
  <section class="hero">
    <div class="hero-content">
      <img src="/uploads/logos/buwa-tv-white.png" alt="BuWa TV" class="hero-logo" />
      <h2>Indoor Digital Billboard Advertising</h2>
      <p>Reach more customers where they eat, shop, work, and play.</p>
      <div class="hero-buttons">
        <a href="/contact-us/" class="btn-red"><i class="fa-solid fa-paper-plane"></i> Get In Touch</a>
        <button class="btn-white" id="video-popup-btn"><i class="fa-solid fa-play"></i> BuWa TV In Action</button>
      </div>
    </div>
  </section>

  <!-- Indoor Digital Billboard Advertising -->
  <section class="content-section">
    <div class="container">
      <h2>Indoor Digital Billboard Advertising</h2>
      <div class="two-column">
        <div class="text-content">
          <p class="intro-text">Your personalized full-motion ads will be showcased repeatedly across BuWa TV, our local digital screen network, reaching potential customers as they navigate their daily routines. With your name, brand, and logo prominently displayed, you'll stay at the forefront of existing customers' minds while building brand awareness with new customers.</p>
        </div>
        <div class="image-content">
          <img src="/uploads/2024/04/Ad-Screen.jpg" alt="Ad Screen" class="featured-image" />
        </div>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section class="video-section">
    <div class="container">
      <div class="video-tabs" id="video-tabs">
        <!-- Tabs populated by JavaScript -->
        <button class="video-tab active" data-video="yatLBgtde2c" data-title="BuWa TV Bumper">BuWa TV Bumper</button>
        <button class="video-tab" data-video="tTqVOj7yptg" data-title="Sample Host Partner Ad">Sample Host Partner Ad</button>
        <button class="video-tab" data-video="37swzrQ82qY" data-title="Sample Trivia">Sample Trivia</button>
      </div>
      <div class="video-wrapper">
        <iframe
          id="video-player"
          src="https://www.youtube.com/embed/yatLBgtde2c?rel=0"
          title="BuWa TV Bumper"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  </section>

  <script>
    // Fallback videos (used if config fetch fails)
    let videos = [
      { id: 'yatLBgtde2c', title: 'BuWa TV Bumper' },
      { id: 'tTqVOj7yptg', title: 'Sample Host Partner Ad' },
      { id: '37swzrQ82qY', title: 'Sample Trivia' }
    ];

    // Fetch config and update videos
    fetch('/config.json')
      .then(res => res.json())
      .then(config => {
        if (config.screenAdvertisingVideos?.length) {
          videos = config.screenAdvertisingVideos;
          renderTabs();
        }
      })
      .catch(() => {}); // Use fallback if fetch fails

    function renderTabs() {
      const tabsContainer = document.getElementById('video-tabs');
      const iframe = document.getElementById('video-player');
      
      // Clear existing tabs
      tabsContainer.innerHTML = '';
      
      // Create new tabs from config
      videos.forEach((video, index) => {
        const tab = document.createElement('button');
        tab.className = 'video-tab' + (index === 0 ? ' active' : '');
        tab.dataset.video = video.id;
        tab.dataset.title = video.title;
        tab.textContent = video.title;
        tabsContainer.appendChild(tab);
      });

      // Set first video
      if (videos.length > 0) {
        iframe.src = `https://www.youtube.com/embed/${videos[0].id}?rel=0`;
        iframe.title = videos[0].title;
      }

      // Re-attach click handlers
      attachTabHandlers();
    }

    function attachTabHandlers() {
      document.querySelectorAll('.video-tab').forEach(tab => {
        tab.addEventListener('click', () => {
          // Update active tab
          document.querySelectorAll('.video-tab').forEach(t => t.classList.remove('active'));
          tab.classList.add('active');

          // Update video
          const videoId = tab.dataset.video;
          const title = tab.dataset.title;
          const iframe = document.getElementById('video-player');
          iframe.src = `https://www.youtube.com/embed/${videoId}?rel=0`;
          iframe.title = title;
        });
      });
    }

    // Attach handlers for initial fallback tabs
    attachTabHandlers();
  </script>

  <!-- Brand Recognition -->
  <section class="content-section alt-bg">
    <div class="container">
      <h2>Our BuWa TV Network can Increase Your Brand Recognition</h2>
      <p class="intro-text">Repeated exposure to your brand message, visuals, and logo, helps your brand stay top of mind with local patrons. The BuWa TV Network gives you the unique ability to reach viewers on a platform where you can't be paused skipped or blocked. Build your brand even faster by pairing the screen advertising with various other marketing channels such as <a href="/social-media-ads/">Social Media Ads</a>, <a href="/geofencing/">Display Advertising</a>, or a <a href="/website-design/">Custom Website</a>.</p>
    </div>
  </section>

  <!-- 5 Benefits -->
  <section class="content-section">
    <div class="container">
      <h2>Benefits of BuWa TV Advertising</h2>

      <div class="benefit-cards">
        <div class="benefit-card">
          <img src="/uploads/2024/05/Screen-Network-Local-Reach.jpg" alt="Ad Screens - Local Reach" />
          <h3>Local Reach</h3>
          <p>Advertising on a local network of digital signage screens strategically positioned in high-traffic areas offers businesses a direct channel to engage with their local audience, amplifying brand visibility in the immediate vicinity.</p>
        </div>

        <div class="benefit-card">
          <img src="/uploads/2024/04/Screen-Network-Non-Skippable.jpg" alt="Screen Network - Non Skippable" />
          <h3>Non-Skippable</h3>
          <p>The inability to skip ads on these screens is advantageous as it guarantees continuous exposure to a captivated audience, enabling businesses to effectively convey their message.</p>
        </div>

        <div class="benefit-card">
          <img src="/uploads/2024/05/Screen-Network-Brand.jpg" alt="Ad Screens - Brand Recall" />
          <h3>Brand Recall</h3>
          <p>The repeated exposure to passersby on local digital signage networks creates greater brand recall compared to other marketing channels, ensuring businesses maintain a prominent presence in the minds of their target audience and leading to heightened brand recognition and engagement.</p>
        </div>

        <div class="benefit-card">
          <img src="/uploads/2024/04/Marketing-Services.jpg" alt="Ad Screens - Update your Message" />
          <h3>Update Your Message</h3>
          <p>The capability to promptly adjust marketing messages grants businesses the flexibility to respond to changing market dynamics and seize immediate opportunities, maintaining responsiveness to consumer needs and maintaining a competitive edge.</p>
        </div>

        <div class="benefit-card">
          <img src="/uploads/2024/04/Cross-Channel-Compliment.jpg" alt="Ad Screens - Cross Channel Compliment" />
          <h3>Cross Channel Compliment</h3>
          <p>It's the perfect addition to other marketing channels, this integrated strategy guarantees an expansive marketing reach and deeper engagement across multiple platforms.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <section class="content-section alt-bg">
    <div class="container">
      <h2>Process of Joining Our Screen Network</h2>

      <div class="process-grid">
        <div class="process-step">
          <span class="step-number">1</span>
          <h3>Consultation</h3>
          <p>Before we begin creating your Ad we'll take time to get to know your brand, messaging, and any important images you would like us to include.</p>
        </div>

        <div class="process-step">
          <span class="step-number">2</span>
          <h3>Ad Creation</h3>
          <p>Once we have gathered your assets, we'll get to work developing your ad. Once we've completed your full-motion ad, we'll send it back to you for approval and refinement.</p>
        </div>

        <div class="process-step">
          <span class="step-number">3</span>
          <h3>Campaign Launch</h3>
          <p>After you've approved your ad, we'll deploy your ad across the screens that are most relevant to your target audience.</p>
        </div>

        <div class="process-step">
          <span class="step-number">4</span>
          <h3>Maintenance + Updates</h3>
          <p>Throughout the lifetime of your contract, we'll be in regular contact to ensure that your ad is up-to-date and engaging to your audience.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Locations CTA -->
  <section class="cta-section">
    <div class="container">
      <h2>Check Out Our Locations</h2>
      <a href="/locations/" class="btn-navy">Learn More</a>
    </div>
  </section>

  <!-- Featured Partner -->
  <section class="content-section">
    <div class="container">
      <h2>Featured Partner</h2>
      <div class="partner-section">
        <p>Rave provides professional installation for our BuWa TV screens. They are a local company that offers low voltage solutions, designing, installing, and maintaining state of the art electrical residential and commercial systems.</p>
        <a href="https://raveinstallation.com/" target="_blank" rel="noopener">
          <img src="/uploads/2024/09/RaveInstallationLLC-black.png" alt="Rave Installation LLC" class="partner-logo" />
        </a>
      </div>
    </div>
  </section>

  <!-- Partner Results -->
  <section class="content-section alt-bg proof-section">
    <div class="container">
      <h2>What Local Partners Are Saying</h2>
      <blockquote class="proof-quote">
        <p>"{partnerQuote.quote}"</p>
        <footer>— {partnerQuote.name}, {partnerQuote.company}</footer>
      </blockquote>
      <a href="/#testimonials" class="btn-navy">Read More Reviews</a>
    </div>
  </section>

  <!-- Service Approach -->
  <section class="content-section alt-bg">
    <div class="container">
      <h2>Our Marketing Service Approach Is Simple</h2>
      <ol class="approach-list">
        <li><div class="step-content"><strong>Discovery</strong><span>Understanding your business and goals</span></div></li>
        <li><div class="step-content"><strong>Strategy</strong><span>Developing a tailored marketing plan</span></div></li>
        <li><div class="step-content"><strong>Execution</strong><span>Implementing your campaigns</span></div></li>
        <li><div class="step-content"><strong>Evaluation</strong><span>Measuring results and performance</span></div></li>
        <li><div class="step-content"><strong>Optimization</strong><span>Continuous improvement for better results</span></div></li>
      </ol>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="content-section">
    <div class="container">
      <h2>Screen Network Common Questions</h2>

      <div class="faq-list">
        {faq.map((item) => (
          <div class="faq-item">
            <h3>{item.question}</h3>
            <p>{item.answer}</p>
          </div>
        ))}
      </div>
      <p class="faq-cta">Have more questions? <a href="/contact-us/">Contact us</a> and we’ll help you plan the right campaign.</p>
    </div>
  </section>

  <!-- Related Services -->
  <section class="content-section related-section">
    <div class="container">
      <h2>Related Services That Pair Well</h2>
      <p>Combine screen advertising with targeted online channels to reinforce your message and improve conversion paths.</p>
      <div class="related-links">
        {relatedServices.map((service) => (
          <a href={service.href} class="related-link">{service.label}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- Video Popup Modal -->
  <div class="video-modal" id="videoModal">
    <div class="video-modal-content">
      <button class="video-modal-close" id="closeVideoModal">&times;</button>
      <div class="tv-frame">
        <div class="tv-bezel">
          <div class="tv-screen" id="tvScreen">
            <!-- YouTube iframe inserted dynamically -->
          </div>
          <div class="tv-reflection"></div>
        </div>
        <div class="tv-brand"><img src="/uploads/logos/TrademarkBuWaTV_grey.png" alt="BuWa TV" /></div>
        <div class="tv-stand">
          <div class="tv-stand-neck"></div>
          <div class="tv-stand-base"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Video Popup
    let youtubeVideoId = 'WN3qbqm1WGI'; // fallback
    
    // Load config for video ID
    fetch('/config.json')
      .then(res => res.json())
      .then(config => {
        if (config.heroVideo?.id) {
          youtubeVideoId = config.heroVideo.id;
        }
      })
      .catch(() => console.log('Using default video ID'));

    const videoModal = document.getElementById('videoModal');
    const tvScreen = document.getElementById('tvScreen');
    const openBtn = document.getElementById('video-popup-btn');
    const closeBtn = document.getElementById('closeVideoModal');

    function openVideoPopup() {
      tvScreen.innerHTML = `
        <iframe
          src="https://www.youtube.com/embed/${youtubeVideoId}?autoplay=1&mute=1&playsinline=1&loop=1&playlist=${youtubeVideoId}"
          title="BuWa TV In Action"
          frameborder="0"
          width="100%"
          height="100%"
          style="position:absolute;top:0;left:0;width:100%;height:100%;"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      `;
      videoModal.classList.add('active');
      setTimeout(() => videoModal.classList.add('ready'), 10);
    }

    function closeVideoPopup() {
      videoModal.classList.remove('ready');
      setTimeout(() => {
        videoModal.classList.remove('active');
        tvScreen.innerHTML = '';
      }, 300);
    }

    openBtn?.addEventListener('click', openVideoPopup);
    closeBtn?.addEventListener('click', closeVideoPopup);
    videoModal?.addEventListener('click', (e) => {
      if (e.target === videoModal) closeVideoPopup();
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && videoModal?.classList.contains('active')) {
        closeVideoPopup();
      }
    });
  </script>
</BaseLayout>

