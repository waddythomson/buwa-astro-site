<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Digital Marketing Services</h1>
      <p class="hero-subtitle">A full range of services to make your business a digital powerhouse!</p>
      <a href="/contact-us" class="btn-red">Get In Touch</a>
    </div>
  </section>

  <!-- Image Section -->
  <section class="image-section">
    <div class="container">
      <img src="/uploads/2024/06/stage.webp" alt="Digital Marketing Stage" class="featured-image" />
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro-section">
    <div class="container">
      <h2>A Digital Marketing Powerhouse</h2>
      <p>Use multiple channels to connect with a wider audience in different places. Our comprehensive suite of digital marketing solutions helps you reach more people, increase engagement, maintain a consistent brand image, and simplify the customer path to conversion.</p>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="benefits-section">
    <div class="container">
      <div class="benefits-grid">
        {benefits.map((benefit) => (
          <div class="benefit-card">
            <div class="benefit-icon">{benefit.icon}</div>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="services-section">
    <div class="container">
      <h2>Multichannel Marketing</h2>
      <p class="section-subtitle">Explore our comprehensive suite of digital marketing solutions</p>
      <div class="services-grid">
        {services.map((service) => (
          <a href={service.link} class="service-card">
            <div class="service-icon">{service.icon}</div>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <span class="learn-more">Learn More ‚Üí</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Amplify Your Marketing?</h2>
      <p>Let's create a customized strategy that drives real results for your business.</p>
      <a href="/contact-us" class="btn-red"><i class="fa-solid fa-phone"></i> Schedule a Call</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    position: relative;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255,255,255,0.02) 10px,
      rgba(255,255,255,0.02) 20px
    );
    pointer-events: none;
  }
  
  .hero-content {
    color: white;
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    font-weight: 700;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  /* Image Section */
  .image-section {
    padding: 3rem 2rem;
    background: #f8f9fa;
    text-align: center;
  }

  .featured-image {
    max-width: 600px;
    width: 100%;
    border-radius: 12px;
    box-shadow: 
      0 8px 30px rgba(0,0,0,0.15),
      0 4px 10px rgba(0,0,0,0.1);
    border: 3px solid rgba(23, 36, 108, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .featured-image:hover {
    transform: translateY(-4px);
    box-shadow: 
      0 12px 40px rgba(0,0,0,0.2),
      0 6px 15px rgba(0,0,0,0.12);
  }

  /* Intro Section */
  .intro-section {
    padding: 3rem 2rem 4rem;
    background: #f8f9fa;
    text-align: center;
  }

  .intro-section h2 {
    font-size: 2rem;
    color: #17246c;
    margin-bottom: 1rem;
  }

  .intro-section p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .btn-red {
    display: inline-block;
    background: #a01c2b;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    transition: background 0.3s ease;
    width: fit-content;
  }
  
  .btn-red:hover {
    background: #8a1825;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Benefits Section */
  .benefits-section {
    padding: 4rem 0;
    background: #f8f9fa;
  }
  
  .benefits-section h2 {
    text-align: center;
    color: #17246c;
    margin-bottom: 3rem;
    font-size: 2rem;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  
  .benefit-card {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 10px;
    border: 2px solid rgba(23, 36, 108, 0.08);
    box-shadow: 
      0 4px 15px rgba(0,0,0,0.08),
      0 2px 6px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .benefit-card:hover {
    transform: translateY(-6px);
    box-shadow: 
      0 12px 35px rgba(23, 36, 108, 0.15),
      0 6px 15px rgba(0,0,0,0.1);
  }
  
  .benefit-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .benefit-card h3 {
    color: #17246c;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }
  
  .benefit-card p {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  /* Services Section */
  .services-section {
    padding: 4rem 0;
    background: white;
  }
  
  .services-section h2 {
    text-align: center;
    color: #17246c;
    margin-bottom: 0.5rem;
    font-size: 2rem;
  }
  
  .section-subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 3rem;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  
  .service-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: white;
    border-radius: 10px;
    text-decoration: none;
    color: inherit;
    border: 2px solid rgba(23, 36, 108, 0.1);
    box-shadow: 
      0 4px 15px rgba(0,0,0,0.08),
      0 2px 6px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }
  
  .service-card:hover {
    border-color: #17246c;
    background: white;
    transform: translateY(-6px);
    box-shadow: 
      0 12px 35px rgba(23, 36, 108, 0.2),
      0 6px 15px rgba(0,0,0,0.1);
  }
  
  .service-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .service-card h3 {
    color: #17246c;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }
  
  .service-card p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    flex-grow: 1;
  }
  
  .learn-more {
    color: #a01c2b;
    font-weight: 600;
    font-size: 0.9rem;
    margin-top: 1rem;
  }
  
  .service-card:hover .learn-more {
    color: #17246c;
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 0;
    text-align: center;
    background: #17246c;
    color: white;
    position: relative;
  }
  
  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255,255,255,0.02) 10px,
      rgba(255,255,255,0.02) 20px
    );
    pointer-events: none;
  }
  
  .cta-section .container {
    position: relative;
    z-index: 1;
  }
  
  .cta-section h2 {
    margin-bottom: 1rem;
  }
  
  .cta-section p {
    opacity: 0.9;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 1.8rem;
    }

    .featured-image {
      max-width: 280px;
    }
    
    .benefits-grid,
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
