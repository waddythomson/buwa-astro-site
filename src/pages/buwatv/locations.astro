<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenuBtn.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
  });

  const statsGrid = document.querySelector('.coverage-stats');
  const statValues = document.querySelectorAll('.stat-value');

  const animateStats = () => {
    statValues.forEach((el) => {
      if (el.dataset.animated === 'true') return;
      const target = Number(el.getAttribute('data-target') || '0');
      const duration = 1200;
      const start = performance.now();
      const step = (now) => {
        const progress = Math.min((now - start) / duration, 1);
        const value = Math.round(target * progress);
        el.textContent = value.toString();
        if (progress < 1) {
          requestAnimationFrame(step);
        } else {
          el.dataset.animated = 'true';
        }
      };
      requestAnimationFrame(step);
    });
  };

  if (statsGrid && statValues.length > 0) {
    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateStats();
          statsObserver.disconnect();
        }
      });
    }, { threshold: 0.4 });
    statsObserver.observe(statsGrid);
  }

  const badgeCopyButton = document.querySelector('[data-copy-button="partner-badge"]');
  const badgeToggleButton = document.querySelector('[data-toggle-button="partner-badge"]');
  const badgeCodeWrap = document.getElementById('partner-badge-code-wrap');
  const badgeCode = document.querySelector('[data-copy-source="partner-badge"]');

  const copyToClipboard = async (value) => {
    if (!value) return false;
    if (navigator.clipboard?.writeText) {
      try {
        await navigator.clipboard.writeText(value);
        return true;
      } catch (error) {
        // Fall back to legacy copy if clipboard fails.
      }
    }

    try {
      const textarea = document.createElement('textarea');
      textarea.value = value;
      textarea.setAttribute('readonly', 'true');
      textarea.style.position = 'absolute';
      textarea.style.left = '-9999px';
      document.body.appendChild(textarea);
      textarea.select();
      const success = document.execCommand('copy');
      document.body.removeChild(textarea);
      return success;
    } catch (error) {
      return false;
    }
  };

  const track = document.querySelector('.locations-track');
  if (track) {
    const updateLoopWidth = () => {
      const items = track.querySelectorAll('.location-item:not(.is-duplicate)');
      if (items.length === 0) return;
      const gap = parseFloat(getComputedStyle(track).gap) || 18;
      const width = Array.from(items)
        .reduce((sum, item) => sum + item.getBoundingClientRect().width, 0)
        + gap * items.length;
      if (width > 0) {
        track.style.setProperty('--loop-width', `${width}px`);
      }
    };

    const images = track.querySelectorAll('img');
    let loadedCount = 0;
    const checkLoaded = () => {
      loadedCount++;
      if (loadedCount >= images.length) updateLoopWidth();
    };
    images.forEach((img) => {
      if (img.complete) checkLoaded();
      else {
        img.addEventListener('load', checkLoaded);
        img.addEventListener('error', checkLoaded);
      }
    });
    setTimeout(updateLoopWidth, 1500);
  }

  if (badgeToggleButton && badgeCodeWrap) {
    badgeToggleButton.addEventListener('click', () => {
      const isHidden = badgeCodeWrap.classList.toggle('is-hidden');
      badgeToggleButton.setAttribute('aria-expanded', String(!isHidden));
      badgeToggleButton.textContent = isHidden ? 'Show code' : 'Hide code';
    });
  }

  if (badgeCopyButton && badgeCode) {
    const defaultLabel = badgeCopyButton.textContent?.trim() || 'Copy';
    badgeCopyButton.addEventListener('click', async () => {
      const text = badgeCode.textContent?.trim() || '';
      const success = await copyToClipboard(text);
      if (!success) return;
      badgeCopyButton.textContent = 'Copied!';
      badgeCopyButton.classList.add('is-copied');
      window.setTimeout(() => {
        badgeCopyButton.textContent = defaultLabel;
        badgeCopyButton.classList.remove('is-copied');
      }, 1600);
    });
  }
</script>