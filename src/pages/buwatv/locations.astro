export const prerender = false;
import BaseLayout from '../../layouts/buwatv/BaseLayout.astro';
import partnersData from '../../data/buwatv/partners.json';
const partners = partnersData.hostPartners ?? partnersData.partners ?? [];
const mapId = '1XGVatlmUL7p9iJ9cFjk7LxkEtQXPdrI';
const mapKmlUrl = `https://www.google.com/maps/d/kml?mid=${mapId}&forcekml=1`;
const partnerBadgeHtml = `<a href="https://buwadigital.com/buwatv/" target="_blank" rel="noopener noreferrer">
  <img src="https://buwadigital.com/uploads/logos/buwa-tv-dark.png" alt="BuWa TV" style="height: 60px; width: auto;" />
</a>`;

const decodeXml = (value = '') =>
  value
    .replace(/<!\[CDATA\[([\s\S]*?)\]\]>/g, '$1')
    .replace(/&amp;/g, '&')
    .replace(/&quot;/g, '"')
    .replace(/&apos;/g, "'")
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>')
    .trim();

const extractPlacemarkNames = (content = '') => {
  const placemarkRegex = /<Placemark>([\s\S]*?)<\/Placemark>/g;
  const nameRegex = /<name>([\s\S]*?)<\/name>/;
  const names = [];
  let match;
  while ((match = placemarkRegex.exec(content)) !== null) {
    const placemarkContent = match[1];
    const nameMatch = placemarkContent.match(nameRegex);
    if (nameMatch) {
      const rawName = decodeXml(nameMatch[1]);
      if (rawName) names.push(rawName);
    }
  }
  return names;
};

const parseKml = (kml = '') => {
  const folderRegex = /<Folder>([\s\S]*?)<\/Folder>/g;
  const folders = [];
  let match;
  while ((match = folderRegex.exec(kml)) !== null) {
    folders.push(match[1]);
  }

  if (folders.length === 0) {
    return { live: extractPlacemarkNames(kml), comingSoon: [] };
  }

  const live = [];
  const comingSoon = [];

  folders.forEach((folder) => {
    const folderNameMatch = folder.match(/<name>([\s\S]*?)<\/name>/);
    const folderName = folderNameMatch ? decodeXml(folderNameMatch[1]) : '';
    const names = extractPlacemarkNames(folder);
    if (/coming\s*soon/i.test(folderName)) {
      comingSoon.push(...names);
    } else {
      live.push(...names);
    }
  });

  return { live, comingSoon };
};

const normalizeName = (value = '') =>
  value
    .toLowerCase()
    .replace(/&/g, 'and')
    .replace(/[^a-z0-9]+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim();

const partnerByName = new Map();
const partnerMatchEntries = partners.map((partner) => {
  const mapNames = [];
  if (partner.name) mapNames.push(partner.name);
  if (partner.mapName) mapNames.push(partner.mapName);
  if (Array.isArray(partner.mapNames)) mapNames.push(...partner.mapNames);
  const keys = Array.from(
    new Set(
      mapNames
        .map((name) => normalizeName(name))
        .filter(Boolean)
    )
  );
  keys.forEach((key) => partnerByName.set(key, partner));
  return { partner, keys };
});

const findPartnerByName = (name = '') => {
  const normalized = normalizeName(name);
  if (!normalized) return null;
  const direct = partnerByName.get(normalized);
  if (direct) return direct;
  return (
    partnerMatchEntries.find(({ keys }) =>
      keys.some((key) => {
        if (!key || key.length < 4 || normalized.length < 4) return false;
        return normalized.includes(key) || key.includes(normalized);
      })
    )?.partner || null
  );
};

const toDisplayList = (names = []) => {
  const counts = new Map();
  const resolved = names.map((name) => {
    const match = findPartnerByName(name);
    const key = match ? normalizeName(match.name) : normalizeName(name);
    counts.set(key, (counts.get(key) || 0) + 1);
    if (!match) return { name, key };
    return {
      name: match.name,
      url: match.url,
      city: match.city,
      logo: match.logo,
      key
    };
  });

  const seen = new Set();
  return resolved
    .filter((item) => {
      if (!item.key || seen.has(item.key)) return false;
      seen.add(item.key);
      return true;
    })
    .map(({ key, ...item }) => ({
      ...item,
      locationCount: counts.get(key) || 1
    }));
};

let mapLocations = { live: [], comingSoon: [] };
let mapFetchedAt = null;
try {
  const response = await fetch(mapKmlUrl);
  if (response.ok) {
    const kml = await response.text();
    mapLocations = parseKml(kml);
    mapFetchedAt = new Date();
  }
} catch (error) {
  // Fallback to static list if map fetch fails
}

const livePartners = mapLocations.live.length
  ? toDisplayList(mapLocations.live)
  : toDisplayList(partners.filter((partner) => partner.status !== 'coming-soon').map((partner) => partner.name));

const uniqByName = (items = []) => {
  const seen = new Set();
  return items.filter((item) => {
    const key = normalizeName(item.name);
    if (!key || seen.has(key)) return false;
    seen.add(key);
    return true;
  });
};

const livePartnersUnique = uniqByName(livePartners);

const liveScrollDuration = Math.max(livePartnersUnique.length * 1.6, 30);
