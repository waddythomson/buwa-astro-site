      crossfadeTimer = setTimeout(() => {
        startCrossfade();
      }, crossfadeDelayMs);

      // Safety timeout - ensure content shows after displayDuration + 8 seconds no matter what
      safetyTimeout = setTimeout(() => {
        console.log('Safety timeout: revealing content');
        startCrossfade();
      }, crossfadeDelayMs + 8000);
    };
    
    // Mark splash as seen for this session
    if (!isDev) sessionStorage.setItem(splashKey, '1');

    const startSplashPlayback = () => {
      if (splashPlaybackStarted) return;
      splashPlaybackStarted = true;
      scheduleCrossfadeTimers();
      chosenVideo.play().catch((e) => {
        // Autoplay blocked - show content immediately
        console.log('Autoplay prevented:', e);
        clearTimeout(crossfadeTimer);
        clearTimeout(safetyTimeout);
        if (videoBg) videoBg.style.opacity = '0';
        revealHeroContent();
      });
    };

    // Start playback as soon as enough data is available, with a short fallback.
    if (chosenVideo.readyState >= 2) {
      startSplashPlayback();
    } else {
      chosenVideo.addEventListener('loadeddata', startSplashPlayback, { once: true });
      chosenVideo.addEventListener('canplay', startSplashPlayback, { once: true });
      setTimeout(startSplashPlayback, 600);
    }
    
    // If video ends before 10s (shorter video), trigger crossfade
    chosenVideo.addEventListener('ended', () => {
      clearTimeout(crossfadeTimer);
      clearTimeout(safetyTimeout);
      startCrossfade();
    });
  })();

  // Smooth scroll for anchor links
  document.querySelectorAll('.scroll-link').forEach(link => {
    link.addEventListener('click', (e) => {
      const href = link.getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) {
          const headerOffset = 80;
          const elementPosition = target.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
          
          // Close mobile menu if open
          const mobileMenuBtn = document.getElementById('mobile-menu-btn');
          const mobileMenu = document.getElementById('mobile-menu');
          if (mobileMenu.classList.contains('active')) {
            mobileMenuBtn.classList.remove('active');
            mobileMenu.classList.remove('active');
          }
        }
      }
    });
  });

  // Video Popup
  const videoBtn = document.getElementById('video-btn');
  const videoOverlay = document.getElementById('video-popup-overlay');
  const videoCloseBtn = document.getElementById('video-close-btn');
  const tvScreenInner = document.getElementById('tv-screen-inner');

  // Default video ID (fallback if config.json fails to load)
  let VIDEO_ID = 'Cbe947yG9og'; // BuWa TV demo

  // Load video ID from config.json
  fetch('/buwatv/config.json')
    .then(res => res.json())
    .then(config => {
      const id = config.videos?.hero || config.heroVideoId;
      if (id) VIDEO_ID = id;
    })
    .catch(() => console.log('Using default video ID'));

  function openVideoPopup() {
    // Create iframe
    const iframe = document.createElement('iframe');
    iframe.src = `https://www.youtube.com/embed/${VIDEO_ID}?autoplay=1&mute=1&loop=1&playlist=${VIDEO_ID}&rel=0`;
    iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
    iframe.allowFullscreen = true;
    // Ensure iframe fills the container
    iframe.style.cssText = 'position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;';
    tvScreenInner.appendChild(iframe);

    // Show popup with animation
    videoOverlay.classList.add('active');
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        videoOverlay.classList.add('ready');
      });
    });
  }

  function closeVideoPopup() {
    videoOverlay.classList.remove('ready');
    setTimeout(() => {
      videoOverlay.classList.remove('active');
      // Remove iframe
      const iframe = tvScreenInner.querySelector('iframe');
      if (iframe) iframe.remove();
    }, 300);
  }

  videoBtn.addEventListener('click', (e) => {
    e.preventDefault();
    openVideoPopup();
  });

  videoCloseBtn.addEventListener('click', closeVideoPopup);

  videoOverlay.addEventListener('click', (e) => {
    if (e.target === videoOverlay) closeVideoPopup();
  });

  // Contact Popup
  const contactOverlay = document.getElementById('contact-popup-overlay');
  const contactCloseBtn = document.getElementById('contact-close-btn');
  const contactForm = document.getElementById('contact-form');
  const formSuccess = document.getElementById('form-success');
  const contactContent = document.querySelector('.contact-popup-content');
  const openContactBtns = document.querySelectorAll('.open-contact-popup');

  function openContactPopup() {
    if (contactForm) contactForm.style.display = 'flex';
    if (formSuccess) formSuccess.style.display = 'none';
    contactContent?.classList.remove('is-success');
    contactOverlay.classList.add('active');
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        contactOverlay.classList.add('ready');
      });
    });
  }

  function closeContactPopup() {
    contactContent?.classList.remove('is-success');
    contactOverlay.classList.remove('ready');
    setTimeout(() => {
      contactOverlay.classList.remove('active');
    }, 300);
  }

  openContactBtns.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      openContactPopup();
    });
  });

  contactCloseBtn.addEventListener('click', closeContactPopup);

  contactOverlay.addEventListener('click', (e) => {
    if (e.target === contactOverlay) closeContactPopup();
  });

  // Form submission
  contactForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = contactForm.querySelector('.submit-btn');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
    
    const formData = new FormData(contactForm);
    const data = {
      formType: 'contact',
      name: formData.get('name'),
      email: formData.get('email'),
      phone: formData.get('phone'),
        smsOptIn: formData.get('smsOptIn') ? 'yes' : 'no',
      message: formData.get('message') || '(No message provided)',
      source: 'BuWa TV Website'
    };
    
    try {
      const response = await fetch(webhookUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });
      
      if (!response.ok) throw new Error(`Server returned ${response.status}`);
      contactForm.style.display = 'none';
      formSuccess.style.display = 'block';
      contactContent?.classList.add('is-success');
      
    } catch (error) {
      console.error('Form submission error:', error);
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send Message';
      alert('There was an error sending your message. Please try again.');
    }
  });

  // Escape key closes popups
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (videoOverlay.classList.contains('active')) {
        closeVideoPopup();
      }
      if (contactOverlay.classList.contains('active')) {
        closeContactPopup();
      }
    }
  });

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn.addEventListener('click', () => {
    mobileMenuBtn.classList.toggle('active');
    mobileMenu.classList.toggle('active');
  });

  // Close mobile menu when clicking a link
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenuBtn.classList.remove('active');
      mobileMenu.classList.remove('active');
    });
  });

  // Scroll reveal - add .visible when section enters viewport
  const revealSections = document.querySelectorAll('.reveal-section[data-reveal]');
  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { rootMargin: '0px 0px -80px 0px', threshold: 0 });

  revealSections.forEach(section => revealObserver.observe(section));

  // Stats count-up (Advertisers section)
  const statsGrid = document.querySelector('.stats-grid');
  const statValues = document.querySelectorAll('.stat-value');
  const animateStats = () => {
    statValues.forEach((el) => {
      if (el.dataset.animated === 'true') return;
      const target = Number(el.getAttribute('data-target') || '0');
      const duration = 1200;
      const start = performance.now();
      const step = (now) => {
        const progress = Math.min((now - start) / duration, 1);
        const value = Math.round(target * progress);
        el.textContent = value.toString();
        if (progress < 1) {
          requestAnimationFrame(step);
        } else {
          el.dataset.animated = 'true';
        }
      };
      requestAnimationFrame(step);
    });
  };

  if (statsGrid) {
    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateStats();
          statsObserver.disconnect();
        }
      });
    }, { threshold: 0.4 });
    statsObserver.observe(statsGrid);
  }
</script>
