// BuWa TV Landing Page - buwatv.com
// This is a standalone landing page for the BuWa TV brand

import BaseLayout from '../../layouts/buwatv/BaseLayout.astro';

// Import partner data for logo carousel
import partnersData from '../../data/buwatv/partners.json';
const hostPartners = partnersData.hostPartners ?? partnersData.partners ?? [];
const communityPartners = partnersData.communityPartners ?? [];

const partnerLogoSrc = (partner) => {
  const logo = partner?.logo;
  if (!logo) return '';
  return `/uploads/partners/${logo}`;
};

const normalizePartnerName = (value = '') =>
  value
    .toLowerCase()
    .replace(/&/g, 'and')
    .replace(/[^a-z0-9]+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim();

const uniquePartners = (items = []) => {
  const seen = new Set();
  return items.filter((partner) => {
    const key = normalizePartnerName(partner?.name ?? '');
    if (!key || seen.has(key)) return false;
    seen.add(key);
    return true;
  });
};

const allPartners = uniquePartners([...hostPartners, ...communityPartners]);
const livePartners = allPartners.filter((partner) => partner.status !== 'coming-soon');

// Import bumper videos configuration
import bumpersData from '../../data/buwatv/bumpers.json';
const bumpers = bumpersData;
